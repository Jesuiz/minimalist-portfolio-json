---
import { basics } from "cv_es.json";
import Section from "@/components/Section.astro";
import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import Whatsapp from "@/icons/Whatsapp.astro";
import Instagram from "@/icons/Instagram.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import X from "@/icons/X.astro";
import GitHub from "@/icons/GitHub.astro";
import Portfolio from "@/icons/Portfolio.astro";
import WorldMap from "@/icons/WorldMap.astro";
import type { SocialIcon } from "@/types";

const {
  name,
  label,
  summary,
  summary_2,
  image,
  location,
  profiles,
  phone,
  email,
  url,
} = basics;
const { city, region } = location;

const countryInfo = "Actualmente resido en";

const SOCIAL_ICONS: SocialIcon = {
  LinkedIn,
  X,
  GitHub,
  Instagram,
  Whatsapp,
};

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn");
const gitInfo = profiles.find(({ network }) => network === "GitHub");
const instaInfo = profiles.find(({ network }) => network === "Instagram");
const whaInfo = profiles.find(({ network }) => network === "Whatsapp");
const linkedUrl = linkedInfo?.url;
const gitUrl = gitInfo?.url;
const instaUrl = instaInfo?.url;
const whaUrl = whaInfo?.url;

const printInfo = [phone, email, 'linkedin.com/in/jesuiz', 'github.com/Jesuiz',].filter(Boolean).join(" • ");
---

<Section>
  <div class="container">
    <div>
      <div class="info">
        <h1>{name}</h1>
        <h2>{label}</h2>

        <span>
          {summary}
        </span>
        <span>
          {summary_2}
        </span>
      </div>
      
      <span class="print">
        {printInfo}
      </span>

      <span class="portfolio">
        <Portfolio /> Visita mi portafolio:
        <a href={'https://portfolio.jesuizdesign.com'} target="_blank" title={`Ver porfatolio`}>
          <p>{url}</p>
        </a>
      </span>

      <span class="country">
        <WorldMap />
        {countryInfo}
        {city}, {region}
      </span>

      <footer class="no-print">
<!--         {
          phone && (
            <a
              href={`tel:${phone}`}
              title={`Llamar por teléfono a ${name} al número ${phone}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        } -->
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Send an email to ${name}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network];

            return (
              <a
                href={url}
                title={`View the profile of ${name} on ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            );
          })
        }
      </footer>

      <!-- </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div> -->
    </div>

    <style>
      .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
      }

      .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-bottom: 10px;
      }

      .info h2 {
        font-weight: 700;
      }


      h1 {
        font-size: 2rem;
        font-weight: 800;
      }

      h2 {
        color: #222;
        font-weight: 500;
        font-size: 1.1rem;
      }

      img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 150px;
        border-radius: 16px;
      }

      span {
        color: #666;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
      }


      .print {
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 8px;
      }

      .portfolio,
      .country, .portfolio p {
        font-weight: 600;
        color: #222;
      }

      span.country {
        margin-top: 8px;
      }

      footer {
        color: #222;
        font-size: 0.65rem;
        display: flex;
        gap: 4px;
        margin-top: 8px;
      }

      footer a {
        color: #222;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;
      }

      footer a:hover {
        background: #eee;
        border: 1px solid #ddd;
      }

      @media (width <= 700px) {
        .container {
          flex-direction: column-reverse;
        }

        .info {
          justify-content: center;
          align-items: center;
          padding-right: 0;
          text-align: center;
        }

        figure {
          display: flex;
          justify-content: center;
          align-items: center;
        }

        h2 {
          text-wrap: balance;
        }

        figure {
          margin: 0 auto;
        }
      }
    </style>
  </div></Section
>
