---
import Section from "../Section.astro"
import { courses } from "cv_en.json"
---

<Section title="Courses">
  <ul>
    {
      courses.map(
        ({ name, description, url, platform, endDate, content, practice }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a href={url} target="_blank" title={`View certificate`}>
                      {name}
                    </a>
                    <p>{description}</p>
                  </h3>
                </header>
                <footer>
                  {content || practice ? (
                    <p>Content: {content} Hours - Practice: {practice} Hours</p>) : null}
                  <p>{platform} Course - {endDate}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>

  footer {
    padding-top: 10px;
  }

  p:first-child {
    font-weight: 600;
  }
  
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 0.7rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #afafaf80;
    display: flex;
    flex-direction: column;
    padding: 12px;
    height: 100%;
  }

  article header {
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  header h3 a {
    color: #222;
  }

  header h3 p {
    font-weight: 500;
    padding-top: 5px;
  }

  article h3 {
    margin-bottom: 5px;
    font-weight: 600;
    padding-right: 20px;
    font-size: 0.85rem;
    line-height: 1rem;
  }

  article a {
    color: #222;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.7rem;
    line-height: 1rem;
  }

